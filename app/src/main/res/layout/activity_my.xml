<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/xinXiBan"
        tools:ignore="ExtraText"
        android:layout_height="150dp"
         android:layout_width="match_parent"
        android:background="@drawable/img_3">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mine_avatar"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="90dp"
            android:src="@drawable/img_1"
            tools:ignore="MissingClass" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称:"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/mine_avatar"
            android:textColor="@color/white">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="了"
            android:textSize="25dp"
            android:layout_toRightOf="@+id/name"
            android:textColor="@color/white"/>


    </RelativeLayout>




    <Button
        android:id="@+id/goodbye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xinXiBan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="0dp"
        android:background="#22000000"
        android:text="退出登录"
        android:textColor="@color/blue">

    </Button>

    <RelativeLayout
        android:backgroundTint="@color/white"
        android:id="@+id/daoHangLan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"



            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/benDi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="本地"
                android:textColor="#000000"
                android:background="#00000000" />


            <Button
                android:id="@+id/ting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="听音乐"
                android:textColor="#000000"
                android:background="#00000000" />


            <Button
                android:id="@+id/communicate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="社区"
                android:textColor="#000000"
                android:background="#00000000"/>

            <Button
                android:id="@+id/myself"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的"
                android:textColor="@color/blue"
                android:background="#00000000" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/daoHangLan"
            android:background="@color/blue"
            tools:ignore="NotSibling" />



    </RelativeLayout>
    </RelativeLayout>